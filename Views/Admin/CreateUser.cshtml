@model PrivateTube.Models.User

@{
    ViewData["Title"] = "Create User";
}

<div style="max-width: 600px; margin: 0 auto; padding-top: 40px;">
    <h1>Create New User</h1>

    <div style="background: #1e1e1e; padding: 32px; border-radius: 8px; margin-top: 24px;">
        <form asp-action="CreateUser" method="post">
            <div asp-validation-summary="All" class="text-danger" style="color: #ff4444; margin-bottom: 20px;"></div>

            <div class="form-group" style="margin-bottom: 20px;">
                <label style="display: block; margin-bottom: 8px; color: #aaa;">Username</label>
                <input type="text" name="username" required
                    style="width: 100%; padding: 12px; background: #121212; border: 1px solid #333; color: white; border-radius: 4px; font-size: 16px;" />
            </div>

            <div class="form-group" style="margin-bottom: 20px;">
                <label style="display: block; margin-bottom: 8px; color: #aaa;">Password</label>
                <input type="password" name="password" required
                    style="width: 100%; padding: 12px; background: #121212; border: 1px solid #333; color: white; border-radius: 4px; font-size: 16px;" />
            </div>

            <div class="form-group" style="margin-bottom: 32px;">
                <label style="display: block; margin-bottom: 8px; color: #aaa;">Role</label>
                <select name="role"
                    style="width: 100%; padding: 12px; background: #121212; border: 1px solid #333; color: white; border-radius: 4px; font-size: 16px;">
                    <option value="User">User</option>
                    <option value="Admin">Admin</option>
                </select>
            </div>

            <div style="display: flex; gap: 16px;">
                <button type="submit" class="btn"
                    style="background: #3ea6ff; color: #0f0f0f; border: none; padding: 12px 32px; border-radius: 2px; cursor: pointer; font-weight: 600; font-size: 14px;">CREATE
                    USER</button>
                <a asp-action="Users"
                    style="padding: 12px 16px; color: #aaa; text-decoration: none; display: flex; align-items: center;">Cancel</a>
            </div>
        </form>
    </div>
</div>
