@{
    ViewData["Title"] = "Login";
    Layout = null; // Use a blank layout or custom one
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - PrivateTube</title>
    <style>
        body { font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; background-color: #0f0f0f; color: #fff; display: flex; align-items: center; justify-content: center; height: 100vh; margin: 0; }
        .login-box { background: #1e1e1e; padding: 40px; border-radius: 8px; box-shadow: 0 4px 6px rgba(0,0,0,0.3); width: 100%; max-width: 400px; text-align: center; }
        .login-box h2 { margin-bottom: 20px; font-weight: 600; }
        .form-group { margin-bottom: 15px; text-align: left; }
        .form-group label { display: block; margin-bottom: 5px; color: #aaa; }
        .form-control { width: 100%; padding: 10px; border: 1px solid #333; background: #121212; color: #fff; border-radius: 4px; box-sizing: border-box; }
        .btn { width: 100%; padding: 12px; background: #cc0000; color: white; border: none; border-radius: 4px; cursor: pointer; font-size: 16px; font-weight: bold; margin-top: 10px; }
        .btn:hover { background: #e60000; }
        .text-danger { color: #ff4444; margin-bottom: 15px; display: block; }
    </style>
</head>
<body>
    <div class="login-box">
        <h2>PrivateTube</h2>
        <form method="post">
            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>Username</label>
                <input type="text" name="username" class="form-control" required autofocus />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" name="password" class="form-control" required />
            </div>
            <button type="submit" class="btn">Sign In</button>
        </form>
    </div>
</body>
</html>
